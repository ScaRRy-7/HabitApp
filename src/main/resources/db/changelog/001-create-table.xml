<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        logicalFilePath="db/changelog/changelog.xml">



    <changeSet id="001-create-table" author="ScaRRy-7">

        <sql>
            CREATE SCHEMA IF NOT EXISTS habitschema;
            CREATE SCHEMA IF NOT EXISTS service;
            CREATE SEQUENCE users_sequence START 1;
            CREATE SEQUENCE habits_sequence START 1;
            CREATE SEQUENCE complited_days_sequence START 1;
        </sql>

        <createSequence sequenceName="users_sequence" schemaName="habitschema"/>
        <createTable tableName="users" schemaName="habitschema" >
            <column name="id" type="BIGINT" defaultValue="NEXTVAL('users_sequence')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_blocked" type="BOOLEAN" defaultValue="false"/>
        </createTable>

        <createSequence sequenceName="habits_sequence" schemaName="habitschema"/>
        <createTable tableName="habits" schemaName="habitschema">
            <column name="id" type="BIGINT" defaultValue="NEXTVAL('habits_sequence')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="frequency" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date_time" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="is_complited" type="BOOLEAN" defaultValue="false"/>
            <column name="user_id" type="BIGINT">
            </column>
        </createTable>

        <createTable tableName="complited_days" schemaName="habitschema">
            <column name="id" type="BIGINT" defaultValue="NEXTVAL('complited_days_sequence')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="complited_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="habit_id" type="BIGINT">
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>